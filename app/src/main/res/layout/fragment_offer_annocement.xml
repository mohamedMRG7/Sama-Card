<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

<android.support.constraint.ConstraintLayout
	android:tag="layout/fragment_offer_annocement"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>

    <View  
				android:background="@color/bootstrap_gray_light"
				android:focusable="true"  
				android:clickable="true"  
				android:layout_width="match_parent"  
				android:layout_height="match_parent"  
				android:alpha="0.7" />
	<android.support.v7.widget.CardView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:cardCornerRadius="@dimen/paddingMedium"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">
	<LinearLayout
		android:layout_width="300dp"
		android:layout_height="wrap_content"


		android:orientation="vertical"
		>

		<ImageView
			android:id="@+id/img_offer"
			android:layout_width="300dp"
			android:layout_height="200dp"
			android:scaleType="fitXY"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_bias="0.3" />



			<Button
				android:id="@+id/bt_open"
				android:layout_width="match_parent"
				android:layout_height="match_parent"

				android:background="@color/green"
				android:text="@string/open_card"
				android:textColor="@color/wihte"
				 />


			<Button
				android:id="@+id/bt_cancel"
				android:layout_width="match_parent"
				android:layout_height="match_parent"

				android:background="@color/bootstrap_gray_light"
				android:text="@string/close"
				android:textColor="@color/wihte"
				 />





	</LinearLayout>

	</android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>

</layout>